---
apiVersion: v1
kind: ConfigMap
metadata:
  name: filebeat-job-configs
data:
  filebeat.yml: |
    filebeat.config.modules:
      path: ${path.config}/modules.d/*.yml
      reload.enabled: false

    #==================== Elasticsearch template setting ==========================


    #============================== Kibana =====================================

    setup.dashboards.enabled: true
    setup.kibana.host: "https://{{ kibana_fqdn }}:{{ kibana_port }}"
    setup.kibana.ssl.enabled: true
    setup.kibana.ssl.certificate_authorities: ["/etc/ssl/certs/kibana-ca.crt"]
    setup.kibana.username: ${ELASTICSEARCH_USERNAME}
    setup.kibana.password: ${ELASTICSEARCH_PASSWORD}

    #================================ Outputs =====================================

    #-------------------------- Elasticsearch output ------------------------------
    output.elasticsearch:
      hosts: ["https://{{ elastic_headless_fqdn }}:{{ elastic_port }}"]
      username: ${ELASTICSEARCH_USERNAME}
      password: ${ELASTICSEARCH_PASSWORD}
      ssl.certificate_authorities: ["/etc/ssl/certs/elasticsearch-ca.crt"]

    queue.mem:
      events: 65536
      flush.min_events: 4096
      flush.timeout: 30s

    monitoring:
      enabled: true
      elasticsearch:
        username: ${ELASTICSEARCH_USERNAME}
        password: ${ELASTICSEARCH_PASSWORD}

---
apiVersion: batch/v1
kind: Job
metadata:
  name: filebeat-setup
  labels:
    component: filebeat
spec:
  template:
    metadata:
      labels:
        component: filebeat
    spec:
      containers:
      - name: "filebeat-setup"
        image: "beats/filebeat:{{elastic_7_version}}"
        imagePullPolicy: IfNotPresent
        env:
        - name: ELASTICSEARCH_USERNAME
          valueFrom:
            secretKeyRef:
              name: tfplenum-logstash-user
              key: username
        - name: ELASTICSEARCH_PASSWORD
          valueFrom:
            secretKeyRef:
              name: tfplenum-logstash-user
              key: password
        volumeMounts:
        - name: configs
          subPath: filebeat.yml
          mountPath: /usr/share/filebeat/filebeat.yml
          readOnly: true
        - mountPath: /etc/ssl/certs/elasticsearch-ca.crt
          name: elasticsearch-certs
          readOnly: true
          subPath: ca.crt
        - mountPath: /etc/ssl/certs/kibana-ca.crt
          name: kibana-certs
          readOnly: true
          subPath: ca.crt
        args: ['-e', 'setup']
      volumes:
      - name: configs
        configMap:
          name: filebeat-job-configs
      - name: elasticsearch-certs
        secret:
          defaultMode: 420
          optional: false
          secretName: tfplenum-es-http-certs-public
      - name: kibana-certs
        secret:
          defaultMode: 420
          optional: false
          secretName: tfplenum-kb-http-certs-public
      nodeSelector:
        role: server
      restartPolicy: Never
