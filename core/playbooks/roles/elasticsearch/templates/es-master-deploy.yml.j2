apiVersion: apps/v1
kind: Deployment
metadata:
  name: es-master
spec:
  selector:
    matchLabels:
      component: elasticsearch
      role: master
  replicas: {{ elastic_masters }}
  template:
    metadata:
      labels:
        component: elasticsearch
        role: master
    spec:
      initContainers:
      - name: init-sysctl
        image: busybox:{{ busybox_version }}
        imagePullPolicy: IfNotPresent
        command:
        - /bin/sh
        - -c
        - "sysctl -w vm.max_map_count=262144"
        securityContext:
          privileged: true
      containers:
      - name: elasticsearch
        image: {{ elasticsearch_image }}:{{ elastic_6_version }}
        imagePullPolicy: IfNotPresent
        securityContext:
          privileged: true
          capabilities:
            add:
              - IPC_LOCK
        resources:
          requests:
            memory: "{{ elastic_master_memory }}Gi"
            cpu: "{{ elastic_master_cpu_request }}"
        env:
        - name: NAMESPACE
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
        - name: NODE_NAME
          valueFrom:
            fieldRef:
              fieldPath: metadata.name
        - name: CLUSTER_NAME
          value: {{ elastic_cluster_name }}
        - name: HTTP_ENABLE
          value: "false"
        - name: ES_JAVA_OPTS
          value: -Xms{{ elastic_master_jvm_memory }}g -Xmx{{ elastic_master_jvm_memory }}g
        ports:
        - containerPort: {{ elastic_data_port }}
          name: http
        - containerPort: {{ elastic_management_port }}
          name: transport
        livenessProbe:
          tcpSocket:
            port: transport
          initialDelaySeconds: 20
          timeoutSeconds: 1
          periodSeconds: 15
          failureThreshold: 5
        volumeMounts:
        - name: elastic-master-conf
          mountPath: {{ elastic_config_path }}/elasticsearch.yml
          subPath: es-master-conf.yml
        - name: data
          mountPath: {{ elastic_pv_data_path }}
        command:
        - /bin/sh
        - -c
        - ulimit -l unlimited; /usr/local/bin/docker-entrypoint.sh
      volumes:
      - name: elastic-master-conf
        configMap:
          name: elastic-master
      - name: data
        emptyDir: {}
      nodeSelector:
        elasticsearch: "true"
