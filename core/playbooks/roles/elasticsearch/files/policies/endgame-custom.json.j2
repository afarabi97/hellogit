{% set index_rollover_size = 90 %}
{% if kit_size > 1 %}
{% set index_rollover_size = 150 %}
{% endif %}
{
  "policy" : {
    "phases" : {
      "hot" : {
        "min_age" : "0ms",
        "actions" : {
          "rollover" : {
            "max_size" : "{{index_rollover_size}}gb",
            "max_age" : "1d"
          }
        }
      },
      "warm" : {
        "min_age" : "0ms",
        "actions" : {
          "forcemerge" : {
            "max_num_segments" : 1
          }
        }
      }
    }
  }
}
