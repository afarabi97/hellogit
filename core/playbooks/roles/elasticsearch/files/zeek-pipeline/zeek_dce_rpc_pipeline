{
    "description": "Pipeline for normalizing Zeek dce_rpc.log",
    "processors": [
        {
            "set": {
                "field": "event.category",
                "value": "network"
            }
        },
        {
            "pipeline": {
                "name": "zeek_general_network_pipeline"
            }
        },
        {
            "set": {
                "field": "network.protocol",
                "value": "dce_rpc"
            }
        },
        {
            "set": {
                "field": "network.transport",
                "value": "tcp"
            }
        },
        {
            "set": {
                "field": "source.ip",
                "value": "{{source.address}}",
                "if": "ctx.source.address != null"
            }
        },
        {
            "set": {
                "field": "destination.ip",
                "value": "{{destination.address}}",
                "if": "ctx.destination.address != null"
            }
        },
        {
            "rename": {
                "field": "rtt",
                "target_field": "event.duration",
                "ignore_missing": true
            }
        },
        {
            "rename": {
                "field": "named_pipe",
                "target_field": "dce_rpc.named_pipe",
                "ignore_missing": true
            }
        },
        {
            "rename": {
                "field": "operation",
                "target_field": "dce_rpc.operation",
                "ignore_missing": true
            }
        },
        {
            "rename": {
                "field": "endpoint",
                "target_field": "dce_rpc.endpoint",
                "ignore_missing": true
            }
        }
    ],
    "on_failure": [
        {
            "set": {
                "field": "error.message",
                "value": "{{ _ingest.on_failure_message }}"
            }
        }
    ]
}
