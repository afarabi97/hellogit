---
apiVersion: kubeadm.k8s.io/v1beta2
kind: InitConfiguration
nodeRegistration:
  criSocket: unix:///var/run/crio/crio.sock
localAPIEndpoint:
  advertiseAddress: "{{ hostvars[groups['control_plane'][0]].management_ipv4 }}"
  bindPort: 6443

---
apiVersion: kubeadm.k8s.io/v1beta2
kind: ClusterConfiguration
imageRepository: {{ docker_registry_repo }}
kubernetesVersion: {{ docker_versions.k8s_version }}
networking:
  serviceSubnet: {{ kube_service_addresses }}
  podSubnet: {{ kube_pod_cidr }}
controllerManager:
  extraArgs:
    node-cidr-mask-size: "{{ kube_network_node_prefix }}"
apiServer:
  extraArgs:
    event-ttl: 6h0m0s
{% if kube_virtual_ip is defined %}
  certSANs:
  - "{{ kube_virtual_ip }}"
controlPlaneEndpoint: "{{ kube_virtual_ip }}:8443"
{% endif %}

---
apiVersion: kubeproxy.config.k8s.io/v1alpha1
kind: KubeProxyConfiguration
clusterCIDR: {{ kube_pod_cidr }}
