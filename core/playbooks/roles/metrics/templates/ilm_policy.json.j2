{
  "policy": {
    "phases": {
      "hot": {
        "min_age": "0ms",
        "actions": {
          "rollover": {
            "max_primary_shard_size": "{{ metric_audit_rollover_size }}",
            "max_age": "{{ metric_audit_rollover_max_age }}"
          }
        }
      },
      "delete": {
        "min_age": "{{ metric_audit_delete_min }}",
        "actions": {
          "delete": {
            "delete_searchable_snapshot": true
          }
        }
      }
    }
  }
}
