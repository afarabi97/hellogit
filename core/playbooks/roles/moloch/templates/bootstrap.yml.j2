{% set number_of_shards = 2 %}{% if kit_size > 1 %}{% set number_of_shards = 4 %}{% endif %}

---
apiVersion: batch/v1
kind: Job
metadata:
  name: moloch-bootstrap
  labels:
    component: moloch
spec:
  template:
    metadata:
      labels:
        component: moloch
    spec:
      containers:
      - name: "moloch"
        image: "{{ moloch_image }}:{{ moloch_version }}"
        imagePullPolicy: IfNotPresent
        env:
        - name: CONTAINER_TYPE
          value: "BOOTSTRAP"
        - name: ELASTICSEARCH_USERNAME
          value: "{{ es_moloch_user }}"
        - name: ELASTICSEARCH_PASSWORD
          value: "{{ es_moloch_password }}"
        - name: ELASTICSEARCH_FQDN
          value: "{{ elastic_fqdn }}"
        - name: ELASTICSEARCH_PORT
          value: "{{ elastic_port }}"
        - name: NUM_OF_SHARDS
          value: "{{ number_of_shards }}"
        - name: NUM_OF_REPLICAS
          value: "1"
        - name: SHARDS_PER_NODE
          value: "1"
        - name: FORCE_MERGE
          value: "25h"
        - name: DELETE
          value: "60d"
        - name: HISTORY
          value: "30"
        - name: ILM_REPLICAS
          value: "1"
        volumeMounts:
        - name: configini
          subPath: config.ini
          mountPath: {{ moloch_path }}/etc/config.ini
        - name: webca
          mountPath: /etc/ssl/certs/container
          readOnly: true
      volumes:
      - name: configini
        configMap:
          name: moloch-bootstrap
      - name: webca
        secret:
          defaultMode: 420
          optional: false
          secretName: webca-certificate
      nodeSelector:
        role: server
      restartPolicy: Never
