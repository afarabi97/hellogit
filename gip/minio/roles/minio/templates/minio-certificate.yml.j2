apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: minio
  namespace: default
spec:
  # Secret names are always required.
  secretName: minio-certificate
  duration: 8760h # 365d
  renewBefore: 360h # 15d
  subject:
   organizations:
   - "CVA/H"
   countries:
   - "US"
  isCA: false
  privateKey:
    algorithm: RSA
    encoding: PKCS1
    size: 2048
  usages:
    - server auth
  dnsNames:
{% for name in minio_certificate_subject_alt_names %}
    - {{ name }}
{% endfor %}
  issuerRef:
    name: webca-issuer
    kind: Issuer
    group: cert-manager.io
