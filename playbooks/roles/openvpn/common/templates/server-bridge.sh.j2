#!/bin/bash
GW_IP=$(ip route | grep default | cut -d ' ' -f3)
openvpn --mktun --dev tap0
#ip link set br0 down
#brctl delbr br0
ip link set {{ management_interface }} up
ip addr add {{ hostvars[groups['master-server'][0]].management_ipv4 }}/24 dev {{ management_interface }}
brctl addbr br0
brctl addif br0 {{ management_interface }} tap0
ifconfig tap0 0.0.0.0 promisc up
ifconfig {{ management_interface }} 0.0.0.0 promisc up
ifconfig br0 {{ hostvars[groups['master-server'][0]].management_ipv4 }} netmask 255.255.255.0 up
ip route flush dev {{ management_interface }}
ip route add default via $GW_IP dev br0
