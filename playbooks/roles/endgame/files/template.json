{
  "index_patterns": "endgame-*",
  "settings": {
    "index": {
      "mapping": {
        "total_fields": {
          "limit": "2000"
        }
      },
      "refresh_interval": "30s",
      "number_of_shards": "1",
      "number_of_replicas": "0"
    }
  },
  "mappings": {
    "doc": {
      "properties": {
        "collection_id":{
          "type":"keyword"
        },
        "correlation_id":{
          "type":"keyword"
        },
        "collection_type":{
          "type":"text",
          "fields":{
            "keyword":{
              "type":"keyword"
            }
          }
        },
        "endpoint":{
          "properties":{
            "ip_address":{
              "type":"ip"
            },
            "updated_at":{
              "type":"date"
            }
          }
        },
        "sensor_info": {
          "dynamic":true,
          "properties":{
            "sensor_build_time":{
              "type":"date",
              "format": "epoch_second"
            }
          }
        },
        "started": {
          "type": "date",
          "format": "epoch_second"
        },
        "connection_timestamp": {
          "type": "date",
          "format": "epoch_second"
        },
        "create_time": {
          "type": "date",
          "format": "epoch_second"
        },
        "date_modified": {
          "type": "date",
          "format": "epoch_second"
        },
        "registry_key_last_modified_time": {
          "type": "date",
          "format": "epoch_second"
        },
        "install_date": {
          "type": "date",
          "format": "basic_date"
        },
        "meta_data": {
          "type": "object",
          "properties": {
            "file_name_timestamps": {
              "type": "object",
              "properties": {
                "modified": {
                  "type": "date",
                  "format": "epoch_second"
                },
                "accessed": {
                  "type": "date",
                  "format": "epoch_second"
                },
                "created": {
                  "type": "date",
                  "format": "epoch_second"
                },
                "entry_modified": {
                  "type": "date",
                  "format": "epoch_second"
                }
              }
            }
          }
        },
        "local_address": {
          "type": "ip"
        },
        "remote_address": {
          "type": "ip"
        },
        "ips": {
          "type": "ip"
        }
      }
    }
  }
}
