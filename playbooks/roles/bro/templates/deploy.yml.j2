apiVersion: apps/v1
kind: Deployment
metadata:
  name: bro
  labels:
    component: bro
spec:
  replicas: {{ groups['bro'] | length }}
  selector:
    matchLabels:
      component: bro
  template:
    metadata:
      labels:
        component: bro
    spec:
      hostNetwork: true
      initContainers:
      - name: init-scripts
        image: busybox:1.27.2
        imagePullPolicy: IfNotPresent
        command:
        - /bin/sh
        - -c
        - "chmod -R 755 {{ bro_path }}/policy/custom-scripts"
        volumeMounts:
        - name: scripts
          mountPath: {{ bro_path }}/policy/custom-scripts
        securityContext:
          privileged: true
      containers:
      - name: bro
        image: {{ bro_image }}:{{ bro_ver }}
        imagePullPolicy: IfNotPresent
        securityContext:
          capabilities:
            add:
              - NET_ADMIN
              - NET_RAW
              - SYS_NICE
        resources:
          requests:
            cpu: {{ bro_cpu_request }}
        volumeMounts:
        - name: vars
          mountPath: /etc/icdm/
        - name: templates
          mountPath: /etc/icdm/templates/
        - name: configs
          mountPath: /etc/icdm/conf/
        - name: scripts
          mountPath: {{ bro_path }}/policy/custom-scripts
      volumes:
      - name: vars
        configMap:
          name: vars
      - name: templates
        configMap:
          name: bro
          items:
          - key: broctl.cfg.tmpl
            path: broctl.cfg.tmpl
          - key: node.cfg.tmpl
            path: node.cfg.tmpl
          - key: networks.cfg.tmpl
            path: networks.cfg.tmpl
          - key: kafka.bro.tmpl
            path: kafka.bro.tmpl
          - key: local.bro.tmpl
            path: local.bro.tmpl
          - key: custom.bro.tmpl
            path: custom.bro.tmpl
      - name: configs
        configMap:
          name: bro
          items:
          - key: kafka.bro.conf
            path: kafka.bro.conf
          - key: networks.cfg.conf
            path: networks.cfg.conf
          - key: node.cfg.conf
            path: node.cfg.conf
          - key: broctl.cfg.conf
            path: broctl.cfg.conf
          - key: local.bro.conf
            path: local.bro.conf
          - key: custom.bro.conf
            path: custom.bro.conf
      - name: scripts
        hostPath:
          path: {{ bro_scripts }}
          type: DirectoryOrCreate
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: bro
                operator: In
                values:
                - "true"
        podAntiAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
          - labelSelector:
              matchExpressions:
              - key: component
                operator: In
                values:
                - bro
            topologyKey: "kubernetes.io/hostname"
