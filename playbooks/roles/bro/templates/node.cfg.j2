{% for n in range( bro_loggers | int) %}
[logger-{{ n }}]
type=logger
host=localhost
env_vars=fanout_id=0
{% endfor %}

[manager]
type=manager
host=localhost
env_vars=fanout_id=0

[proxy-1]
type=proxy
host=localhost
env_vars=fanout_id=0

{%- for iface in hostvars[hostname].sensor_monitor_interface %}
[{{ iface }}]
type=worker
host=localhost
interface=af_packet::{{ iface }}
lb_method=custom
lb_procs={{ hostvars[hostname].bro_workers }}
# This must be unique for every AF_PACKET "process group"
env_vars=fanout_id={{ 50 - loop.index0 }}
{% endfor %}
