apiVersion: apps/v1
kind: Deployment
metadata:
  name: suricata
  labels:
    component: suricata
spec:
  replicas: {{ groups['suricata'] | length }}
  selector:
    matchLabels:
      component: suricata
  template:
    metadata:
      labels:
        component: suricata
    spec:
      hostNetwork: true
      containers:
      - name: suricata
        image: {{ suricata_image }}:{{ suricata_ver }}
        imagePullPolicy: IfNotPresent
        securityContext:
          capabilities:
            add:
              - NET_ADMIN
              - NET_RAW
              - SYS_NICE
        resources:
          limits:
            cpu: {{ suricata_cpu_limit }}
          requests:
            cpu: {{ suricata_cpu_request }}
        volumeMounts:
        - name: vars
          mountPath: /etc/icdm/
        - name: templates
          mountPath: /etc/icdm/templates/
        - name: configs
          mountPath: /etc/icdm/conf/
      volumes:
      - name: vars
        configMap:
          name: vars
      - name: configs
        configMap:
          name: suricata
          items:
          - key: suricata.yaml.conf
            path: suricata.yaml.conf
          - key: filebeat.yml.conf
            path: filebeat.yml.conf
      - name: templates
        configMap:
          name: suricata
          items:
          - key: suricata.yaml.tmpl
            path: suricata.yaml.tmpl
          - key: filebeat.yml.tmpl
            path: filebeat.yml.tmpl
      nodeSelector:
        suricata: "true"
      affinity:
        podAntiAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
          - labelSelector:
              matchExpressions:
              - key: component
                operator: In
                values:
                - suricata
            topologyKey: "kubernetes.io/hostname"
