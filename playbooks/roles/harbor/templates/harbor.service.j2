[Unit]
Description = Harbor Container Service

Wants = network.target
Requires = docker.service
After = docker.service

[Service]
Type = simple
ExecStart = /usr/bin/docker-compose -f {{ harbor_dir }}/docker-compose.yml up
ExecStop  = /usr/bin/docker-compose -f {{ harbor_dir }}/docker-compose.yml down -v

[Install]
WantedBy = multi-user.target
